{
  "name": "mcpmeta",
  "version": "1.0.0",
  "description": "MCP implementation for LLMs",
  "type": "module",
  "scripts": {
    "build": "tsc --project config/tsconfig.json",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node dist/index.js",
    "pretest": "npm run build",
    "test": "NODE_ENV=development NODE_OPTIONS='--experimental-vm-modules' jest --config config/jest.config.js",
    "test:unit": "NODE_ENV=development NODE_OPTIONS='--experimental-vm-modules' jest --config config/jest.config.js --testPathPattern=test/unit",
    "test:integration": "NODE_ENV=development NODE_OPTIONS='--experimental-vm-modules' jest --config config/jest.config.js --testPathPattern=test/integration",
    "prelistener": "npm run build",
    "listener": "NODE_ENV=development node dist/services/logger/listener.js",
    "dev": "npm run build && NODE_ENV=development node dist/index.js"
  },
  "bin": {
    "mcpguide": "./dist/index.js"
  },
  "keywords": [
    "mcp",
    "llm",
    "context"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.13",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "commander": "^11.1.0",
    "eventsource": "^3.0.6",
    "mcps-logger": "^1.0.0-rc.4",
    "node-fetch": "^3.3.2",
    "zod": "^3.24.2"
  }
}
